{
  "private": true,
  "name": "tactics-arena",
  "version": "0.0.0",
  "description": "Put your tactics to the test against other players in a 1v1, chess-like arena!",
  "scripts": {
    "assets:watch": "npx webpack --mode development --watch --progress --hide-modules",
    "assets:build": "npx webpack --mode production --progress --hide-modules",
    "server:watch": "npx nodemon --watch src/server --exec \"npm run server:build && npm start\"",
    "server:build": "npx babel src --out-dir build --ignore src/assets --presets env",
    "build": "npm run server:build && npm run assets:build",
    "start": "npm run server:build && node build/server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "express": "^4.16.3",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-router-dom": "^4.3.1",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "superagent": "^3.8.3",
    "three": "^0.96.0"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "core-js": "^2.5.7",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "postcss-loader": "^2.1.6",
    "prop-types": "^15.6.1",
    "sass-loader": "^7.0.1",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.4",
    "webpack-notifier": "^1.6.0"
  }
}
